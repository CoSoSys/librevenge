#!/bin/sh

# Build runtime and developer zipfiles for librevenge on Win32.

ZIP=librevenge-@RVNG_VERSION@-MinGW.zip
DEVZIP=librevenge-devel-@RVNG_VERSION@-MinGW.zip
TOOLSZIP=librevenge-tools-@RVNG_VERSION@-MinGW.zip

cd $DESTDIR@prefix@

DLLDIR=lib
[ -f bin/librevenge-@RVNG_MAJOR_VERSION@.@RVNG_MINOR_VERSION@.dll ] && \
[ -f bin/librevenge-stream-@RVNG_MAJOR_VERSION@.@RVNG_MINOR_VERSION@.dll ] && \
DLLDIR=bin

@STRIP@ --strip-all \
$DLLDIR/librevenge-@RVNG_MAJOR_VERSION@.@RVNG_MINOR_VERSION@.dll \
$DLLDIR/librevenge-stream-@RVNG_MAJOR_VERSION@.@RVNG_MINOR_VERSION@.dll \
bin/wpd2html.exe \
bin/wpd2raw.exe \
bin/wpd2text.exe

upx -qqq --best \
$DLLDIR/librevenge-@RVNG_MAJOR_VERSION@.@RVNG_MINOR_VERSION@.dll \
$DLLDIR/librevenge-stream-@RVNG_MAJOR_VERSION@.@RVNG_MINOR_VERSION@.dll \
bin/wpd2html.exe \
bin/wpd2raw.exe \
bin/wpd2text.exe

rm -f $ZIP
zip -q -r $ZIP -@ <<EOF
$DLLDIR/librevenge-@RVNG_MAJOR_VERSION@.@RVNG_MINOR_VERSION@.dll
$DLLDIR/librevenge-stream-@RVNG_MAJOR_VERSION@.@RVNG_MINOR_VERSION@.dll
EOF

rm -f $DEVZIP
zip -q -r $DEVZIP -@ <<EOF
include/librevenge-@RVNG_MAJOR_VERSION@.@RVNG_MINOR_VERSION@
lib/librevenge-@RVNG_MAJOR_VERSION@.@RVNG_MINOR_VERSION@.dll.a
lib/librevenge-@RVNG_MAJOR_VERSION@.@RVNG_MINOR_VERSION@.a
lib/librevenge-stream-@RVNG_MAJOR_VERSION@.@RVNG_MINOR_VERSION@.dll.a
lib/librevenge-stream-@RVNG_MAJOR_VERSION@.@RVNG_MINOR_VERSION@.a
lib/pkgconfig/librevenge-@RVNG_MAJOR_VERSION@.@RVNG_MINOR_VERSION@.pc
lib/pkgconfig/librevenge-stream-@RVNG_MAJOR_VERSION@.@RVNG_MINOR_VERSION@.pc
EOF

rm -f $TOOLSZIP
zip -q -r -j $TOOLSZIP -@ <<EOF
bin/wpd2html.exe
bin/wpd2raw.exe
bin/wpd2text.exe
EOF
