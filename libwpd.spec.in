%define name librevenge
%define version @VERSION@
%define  RELEASE 1
%define  release     %{?CUSTOM_RELEASE} %{!?CUSTOM_RELEASE:%RELEASE}

Name: %{name}
Summary: Library for reading and converting WordPerfect(tm) documents
Version: %{version}
Release: %{release}
Source: %{name}-%{version}.tar.gz
Group: System Environment/Libraries
URL: http://librevenge.sf.net/
BuildRoot: %{_tmppath}/%{name}-%{version}-buildroot
License: LGPL
BuildRequires: gcc-c++, libstdc++-devel
Provides: %{name}-@RVNG_MAJOR_VERSION@_@RVNG_MINOR_VERSION@-@RVNG_MINOR_VERSION@
Obsoletes: %{name}-@RVNG_MAJOR_VERSION@_@RVNG_MINOR_VERSION@-@RVNG_MINOR_VERSION@ < %{version}-%{release}

%description
Library that handles Word Perfect documents.

%if %{!?_without_stream:1}%{?_without_stream:0}
%package tools
Requires: librevenge
Summary: Tools to transform WordPerfect Documents into other formats
Group: Applications/Publishing

%description tools
Tools to transform WordPerfect Documents into other formats.
Currently supported: html, raw, text
%endif

%package devel
Requires: librevenge = %{version}-%{release}
Summary: Files for developing with librevenge.
Group: Development/Libraries

%description devel
Includes and definitions for developing with librevenge.

%if %{!?_without_docs:1}%{?_without_docs:0}
%package docs
BuildRequires: doxygen
Provides: %{name}-devel-doc
Obsoletes: %{name}-devel-doc < %{version}-%{release}
Summary: Documentation of librevenge API
Group: Development/Documentation

%description docs
Documentation of librevenge API for developing with librevenge
%endif

%prep
%__rm -rf $RPM_BUILD_ROOT

%setup -q -n %{name}-%{version}

%build
./configure --prefix=%{_prefix} --exec-prefix=%{_prefix} --libdir=%{_libdir} \
	%{?_without_stream:--without-stream} \
	%{?_with_debug:--enable-debug}  \
	%{?_without_docs:--without-docs}

%__make

%install
umask 022

%__make DESTDIR=$RPM_BUILD_ROOT install
%__rm -rf $RPM_BUILD_ROOT%{_libdir}/*.la

%clean
%__rm -rf $RPM_BUILD_ROOT $RPM_BUILD_DIR/file.list.%{name}

%files
%defattr(644,root,root,755)
%{_libdir}/librevenge*-@RVNG_MAJOR_VERSION@.@RVNG_MINOR_VERSION@.so.*

%if %{!?_without_stream:1}%{?_without_stream:0}
%files tools
%defattr(755,root,root,755)
%{_bindir}/wpd2*
%endif

%files devel
%defattr(644,root,root,755)
%{_libdir}/librevenge*-@RVNG_MAJOR_VERSION@.@RVNG_MINOR_VERSION@.so
#%{_libdir}/librevenge*-@RVNG_MAJOR_VERSION@.@RVNG_MINOR_VERSION@.*a
%{_libdir}/pkgconfig/librevenge*-@RVNG_MAJOR_VERSION@.@RVNG_MINOR_VERSION@.pc
%{_includedir}/librevenge-@RVNG_MAJOR_VERSION@.@RVNG_MINOR_VERSION@/librevenge*

%if %{!?_without_docs:1}%{?_without_docs:0}
%files docs
%{_datadir}/*
%endif

